{
	"compilerOptions": {
		"baseUrl": "./src", /* Указать базовый путь для всех создаваемых файлов. */
		"outDir": "./dist", /* Указать папку для сохранения всех создаваемых файлов. */
		"target": "es2022", /* Задать версию ECMAScript, на которую будет транслироваться код. */
		"module": "commonjs", /* Задать, какой тип модульного кода будет сгенерирован. */
		"moduleResolution": "node", /* Задать способ поиска файла на основе импортов в TypeScript. */
		"allowJs": true, /* Разрешить использование JavaScript файлов в вашей программе. Используйте опцию 'checkJS' для проверки ошибок в этих файлах. */
		"checkJs": false, /* Включить отчет об ошибках в проверенных типах JavaScript файлов. */
		"esModuleInterop": true, /* Генерировать дополнительный JavaScript для облегчения импорта модулей CommonJS. Это также включает опцию 'allowSyntheticDefaultImports' для совместимости с типами. */
		"forceConsistentCasingInFileNames": true, /* Гарантировать корректный регистр символов в импортах. */
		"strict": true, /* Включить все опции строгой проверки типов. */
		"skipLibCheck": true /* Пропустить проверку типов всех файлов с расширением .d.ts. */
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
